@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Danh sách Quyền";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-inner">
        <!-- Tiêu đề và Breadcrumbs -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold text-primary mb-0">Trang chủ</h3>
            <ul class="breadcrumbs list-inline mb-0">
                <li class="list-inline-item">
                    <a href="#" class="text-secondary">
                        <i class="icon-home"></i>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Thanh tìm kiếm và Nút "Thêm mới" -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/admin/role/create" class="btn btn-success shadow-sm">
                <i class="fas fa-plus"></i> Thêm mới
            </a>
        </div>

        <!-- Bảng hiển thị danh mục được căn giữa -->
        <div class="col-md-12 d-flex justify-content-center">
            <div class="card shadow-sm rounded-lg w-100">
                <div class="card-header bg-primary text-white text-center">
                    <h5 class="mb-0">Vai trò</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover table-striped mb-0 text-center">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Tên</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                var i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.Name</td>
                                        <td></td>
                                    </tr>
                                    i++;
                                }

                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted">Không tìm thấy kết quả nào!</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .page-inner {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
    }

    .breadcrumbs {
        list-style: none;
        margin: 0;
        padding: 0;
    }

        .breadcrumbs li {
            display: inline;
        }

    .icon-home, .icon-arrow-right {
        font-size: 18px;
        color: #007bff;
    }

    .card-header {
        font-size: 18px;
        font-weight: bold;
    }

    .table {
        border-radius: 8px;
    }

    .table-hover tbody tr:hover {
        background-color: #e9ecef;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .input-group {
        width: 300px;
    }

    .form-inline .input-group .form-control {
        border-radius: 4px 0 0 4px;
    }

    .form-inline .input-group .input-group-append .btn {
        border-radius: 0 4px 4px 0;
    }
</style>

@section scripts {
    <script>
        $('.btnDelete').on('click', function () {
            var button = $(this);
            var id = button.data('id');
            if (confirm("Bạn có chắc chắn muốn xóa không?")) {
                $.ajax({
                    url: '/admin/category/delete',
                    type: 'post',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            location.reload(true);
                        } else {
                            alert("Xóa không thành công");
                        }
                    },
                    error: function () {
                        alert("Đã xảy ra lỗi. Vui lòng thử lại.");
                    }
                });
            }
        });
    </script>
}

<!-- /.content -->
