@using Microsoft.AspNet.Identity.EntityFramework
@model IdentityRole
@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="page-header mb-4">
            <h3 class="fw-bold text-primary">Thêm quyền</h3>
            <ul class="breadcrumbs">
                <li class="nav-home">
                    <a href="/Admin/role/index">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="current">Thêm quyền</li>
            </ul>
        </div>

        <div class="col-md-12">
            @using (Html.BeginForm("create", "role", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="card shadow-sm rounded-lg">
                    <div class="card-header bg-info text-white text-center">
                        <h5 class="mb-0">Thông tin vai trò</h5>
                    </div>
                    <div class="card-body">                      
                        <div class="tab-content">
                            <!-- Tab Thông tin chung -->
                            <div class="active tab-pane" id="activity">
                                <div class="form-group">
                                    <label class="form-label fw-bold">Tên quyền</label>
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Tên vai trò" })
                                    @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success">Thêm mới</button>
                        <a href="@Url.Action("Index", "Create")" class="btn btn-danger">Quay về</a>
                    </div>
                </div><!-- /.card -->
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: white; /* Màu nền trắng cho body */
    }

    .container {
        background-color: white; /* Màu nền trắng cho container */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Tạo bóng nhẹ cho container */
    }

    .table-white {
        background-color: white;
        border-color: #dee2e6;
    }

        .table-white th, .table-white td {
            background-color: white; /* Màu trắng cho các ô của bảng */
            color: #212529; /* Màu chữ */
            border: 1px solid #dee2e6;
        }
</style>

